{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2022", "dom"],
    "noEmit": false,
    "isolatedModules": false
  },
  "include": [
    "lib/**/*",
    "scripts/**/*",
    "prisma/**/*",
    "types/**/*"
  ],
  "exclude": [
    "src/**/*",
    "node_modules"
  ]
}
